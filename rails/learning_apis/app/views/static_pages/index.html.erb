<%= form_tag("/", method: "get") do %>
  <%= label_tag(:flick_id, "Enter your Flickr ID:") %>
  <%= text_field_tag(:flick_id) %>
  <%= submit_tag("Flick Me") %>
<% end %>
<% if params[:flick_id] %>
  <% user_photos(params[:flick_id]).each do |photo|  %>
    <%= link_to(image_tag(FlickRaw.url_q(photo), class: 'flickr-photo-widget',
                  title: photo.title, border: 0), FlickRaw.url_photopage(photo)) %>
  <% end %>
<% end %>
